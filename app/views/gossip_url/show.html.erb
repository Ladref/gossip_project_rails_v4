<br/><br/><br/>

<div class="card text-center">
  <div class="card-header">
    Gossip <%= @id %>
  </div>
  <div class="card-body">
    <h5 class="card-title"> <%= @title %> </h5>
    <p class="card-text"><%= @single_gossip %> </p>
    <footer class="blockquote-footer">Send by <cite title="Source Title"><%= @author %></cite></footer><br/>
    <div class= "btn btn-outline-primary">
      <%= link_to "Author's profile", profile_path, class: "btn-outline-primary"%>
    </div>
    <div class= "btn btn-outline-primary">
      <%= link_to "Edit gossip", edit_gossip_path, class: "btn-outline-primary"%>
    </div>

  <br/><br/>
  <div class="card-footer text-muted">
    <%= @created_at %>
  </div>
</div>
